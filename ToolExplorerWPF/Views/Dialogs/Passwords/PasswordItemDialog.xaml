<ui:ContentDialog x:Class="ToolExplorerWPF.Views.Dialogs.Passwords.PasswordItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolExplorerWPF.Views.Dialogs.Passwords"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Cursor="">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ui:TextBlock Text="Username" />
            <ui:TextBox Text="{Binding SelectedUsername}" Margin="0 5 0 0"/>
            <ui:TextBlock Text="Password" Margin="0 10 0 0"/>
            <ui:PasswordBox Text="{Binding SelectedPassword}" Margin="0 5 0 0"/>
            <ui:TextBlock Text="Note" Margin="0 10 0 0"/>
            <ui:TextBox Text="{Binding SelectedNote}" Margin="0 5 0 0" />
        </StackPanel>
    </Grid>
</ui:ContentDialog>
