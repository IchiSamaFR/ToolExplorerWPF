<Page x:Class="ToolExplorerWPF.Views.Pages.PsychonautJournalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:ToolExplorerWPF.ViewModels.Pages"
    xmlns:local="clr-namespace:ToolExplorerWPF.Views.Pages"
    xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls.PsychonautJournal"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance vm:PsychonautJournalVM,
        IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800"
    Title="PsychonautJournalPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox HorizontalAlignment="Stretch"
                    IsReadOnly="True"
                    Text="{Binding SelectedFilePath}"/>
                <Button Content="Import"
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    Command="{Binding ImportPsychonautDatasCommand}"
                    VerticalAlignment="Center"/>
            </Grid>

            <controls:ExperiencesControl Grid.Row="1"
                Experiences="{Binding InputOrderedExperiences}"/>

        </Grid>


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox HorizontalAlignment="Stretch"
                    ItemsSource="{Binding Versions}"
                    SelectedItem="{Binding SelectedVersion}"
                    DisplayMemberPath="Key"/>
                <Button Content="Export"
                    Grid.Column="1"
                    Margin="5,0,0,0"
                    Command="{Binding ExportPsychonautDatasCommand}"
                    VerticalAlignment="Center"/>
            </Grid>
            <controls:ExperiencesControl Grid.Row="1"
                Experiences="{Binding OutputOrderedExperiences}"/>
        </Grid>
    </Grid>
</Page>
