<Page x:Class="ToolExplorerWPF.Views.Pages.GameOfLifePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:ToolExplorerWPF.ViewModels.Pages"
      xmlns:local="clr-namespace:ToolExplorerWPF.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls"
      xmlns:models="clr-namespace:GameOfLifeLibrary.Models;assembly=GameOfLifeLibrary"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance vm:GameOfLifeVM,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="550"
      d:DesignWidth="800"
      x:Name="Page"
      Title="GameOfLifePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Name="content">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <controls:ArrayGridEx ArraySource="{Binding Cells}">
                    <controls:ArrayGridEx.ItemTemplate>
                        <DataTemplate>
                            <Button VerticalAlignment="Stretch"
		                        HorizontalAlignment="Stretch"
		                        Margin="1"
		                        Command="{Binding DataContext.ApplyLifeCommand, ElementName=Page}"
		                        CommandParameter="{Binding .}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAlive}" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </controls:ArrayGridEx.ItemTemplate>
                </controls:ArrayGridEx>

                <Grid Grid.Row="1"
                    Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="{Binding GameEngine.TotalGenerations}"
                            TickFrequency="1"
                            Value="{Binding GameEngine.Generation, Mode=OneWay}"  Margin="0 0 10 0"/>
                    <TextBox Grid.Column="1" Text="{Binding GameEngine.Generation, Mode=OneWay}"/>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <ui:Button
                            Margin="10 0 0 0"
                            Appearance="Success"
                            Command="{Binding StartPauseCommand}"
                            Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
                            Content="Play" />
                        <ui:Button
                            Margin="10 0 0 0"
                            Appearance="Caution"
                            Command="{Binding StartPauseCommand}"
                            Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Content="Pause" />
                        <ui:Button
                            Margin="10 0 0 0"
                            Appearance="Danger"
                            Command="{Binding ResetCommand}"
                            IsEnabled="{Binding IsStarted}"
                            Content="Reset" />
                        <ui:Button Grid.Column="2"
                            Margin="10 0 0 0"
                            Appearance="Primary"
                            Command="{Binding NextAgeCommand}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource BooleanInvertConverter}}"
                            Content="Next" />
                    </StackPanel>
                </Grid>
            </Grid>
        </ui:Card>

        <StackPanel Orientation="Vertical"
            Grid.Column="1"
            Margin="10,0,0,0">
            <ui:Card
                IsEnabled="{Binding IsStarted, Converter={StaticResource BooleanInvertConverter}}">
                <StackPanel Orientation="Vertical" CanVerticallyScroll="True" VerticalAlignment="Top">
                    <ui:TextBlock Text="Parameters" FontTypography="BodyStrong" Margin="0 0 0 10"/>
                    <ui:TextBlock Text="Height"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="10"
                            Maximum="100"
                            TickFrequency="1"
                            Value="{Binding Rows, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1"
                            Text="{Binding Rows, Mode=TwoWay}"/>
                    </Grid>
                    <ui:TextBlock Text="Width"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="10"
                            Maximum="100"
                            TickFrequency="1"
                            Value="{Binding Columns, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding Columns, Mode=TwoWay}"/>
                    </Grid>
                    <ui:TextBlock Text="Speed delay"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="10"
                            Maximum="500"
                            TickFrequency="10"
                            Value="{Binding SpeedDelay, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding SpeedDelay, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                        <ui:Button
                            Margin="5 0 0 0"
                            Appearance="Primary"
                            Command="{Binding GenerateCommand}"
                            Content="Clear" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>
            <ui:Card Margin="0 10 0 0"
                IsEnabled="{Binding IsStarted, Converter={StaticResource BooleanInvertConverter}}">
                <StackPanel Orientation="Vertical" CanVerticallyScroll="True" VerticalAlignment="Top">
                    <ui:TextBlock Text="Rules" FontTypography="BodyStrong" Margin="0 0 0 10"/>
                    <ui:TextBlock Text="Minimum survival"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding MinSurvivalNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding MinSurvivalNeighbors}"/>
                    </Grid>
                    <ui:TextBlock Text="Maximum survival"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding MaxSurvivalNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding MaxSurvivalNeighbors}"/>
                    </Grid>
                    <ui:TextBlock Text="Birth count"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding BirthNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding BirthNeighbors}"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                        <ui:Button
                            Appearance="Secondary"
                            Command="{Binding ApplyDefaultRules}"
                            Content="Default" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

        </StackPanel>
    </Grid>
</Page>
