<Page x:Class="ToolExplorerWPF.Views.Pages.GameOfLifePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:ToolExplorerWPF.ViewModels.Pages"
      xmlns:local="clr-namespace:ToolExplorerWPF.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls"
      xmlns:models="clr-namespace:GameOfLifeLibrary.Models;assembly=GameOfLifeLibrary"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance vm:GameOfLifeVM,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="800"
      d:DesignWidth="800"
      x:Name="Page"
      Title="GameOfLifePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <ui:Card VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch">
            <controls:ArrayGridEx ArraySource="{Binding Cells}">
                <controls:ArrayGridEx.ItemTemplate>
                    <DataTemplate>
                        <Button VerticalAlignment="Stretch"
		                    HorizontalAlignment="Stretch"
		                    Margin="1"
		                    Command="{Binding DataContext.ApplyLifeCommand, ElementName=Page}"
		                    CommandParameter="{Binding .}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAlive}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </controls:ArrayGridEx.ItemTemplate>
            </controls:ArrayGridEx>
        </ui:Card>

        <Grid ScrollViewer.CanContentScroll="True"
            Grid.Column="1"
            Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Expander Grid.Row="0">
                <Expander.Header>
                    <ui:TextBlock Text="Grid" FontTypography="BodyStrong"/>
                </Expander.Header>
                <StackPanel Orientation="Vertical"
                    IsEnabled="{Binding IsStarted, Converter={StaticResource BooleanInvertConverter}}">
                    <ui:TextBlock Text="Height"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="10"
                            Maximum="100"
                            TickFrequency="1"
                            Value="{Binding Width, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1"
                            Text="{Binding Width, Mode=TwoWay}"/>
                    </Grid>
                    <ui:TextBlock Text="Width"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="10"
                            Maximum="100"
                            TickFrequency="1"
                            Value="{Binding Height, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding Height, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                        <ui:Button
                            Margin="5 0 0 0"
                            Appearance="Primary"
                            Command="{Binding ClearCommand}"
                            Content="Clear" />
                    </StackPanel>
                </StackPanel>
            </Expander>
            <Expander Grid.Row="1"
                      Margin="0,10,0,0">
                <Expander.Header>
                    <ui:TextBlock Text="Rules" FontTypography="BodyStrong"/>
                </Expander.Header>

                <StackPanel Orientation="Vertical"
                    IsEnabled="{Binding IsStarted, Converter={StaticResource BooleanInvertConverter}}">
                    <ui:TextBlock Text="Minimum survival"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding MinSurvivalNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding MinSurvivalNeighbors}"/>
                    </Grid>
                    <ui:TextBlock Text="Maximum survival"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding MaxSurvivalNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding MaxSurvivalNeighbors}"/>
                    </Grid>
                    <ui:TextBlock Text="Birth count"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsSnapToTickEnabled="True"
                            Minimum="0"
                            Maximum="4"
                            TickFrequency="1"
                            Value="{Binding BirthNeighbors}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding BirthNeighbors}"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                        <ui:Button
                            Appearance="Secondary"
                            Command="{Binding ApplyDefaultRules}"
                            Content="Default" />
                    </StackPanel>
                </StackPanel>
            </Expander>

            <Expander Grid.Row="2"
                Margin="0 10 0 0"
                IsExpanded="True">
                <Expander.Header>
                    <ui:TextBlock Text="Generation" FontTypography="BodyStrong"/>
                </Expander.Header>
                <StackPanel Orientation="Vertical" CanVerticallyScroll="True" VerticalAlignment="Top">
                    <ui:TextBlock Text="Speed"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
				            VerticalAlignment="Center"
				            IsSnapToTickEnabled="True"
				            Minimum="10"
				            Maximum="500"
				            TickFrequency="10"
				            Value="{Binding SpeedDelay, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding SpeedDelay, Mode=TwoWay}"/>
                    </Grid>

                    <ui:TextBlock Text="Generation"/>
                    <Grid Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
				            VerticalAlignment="Center"
				            IsSnapToTickEnabled="True"
				            Minimum="0"
				            Maximum="{Binding TotalGenerations}"
				            TickFrequency="1"
				            Value="{Binding Generation}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding Generation}"/>
                    </Grid>
                    <StackPanel Margin="0 10 0 0"
			            Orientation="Horizontal"
			            HorizontalAlignment="Right">
                        <ui:Button
				            Margin="10 0 0 0"
				            Appearance="Success"
				            Command="{Binding StartPauseCommand}"
				            Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"
				            Content="Play" />
                        <ui:Button
				            Margin="10 0 0 0"
				            Appearance="Caution"
				            Command="{Binding StartPauseCommand}"
				            Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
				            Content="Pause" />
                        <ui:Button
				            Margin="10 0 0 0"
				            Appearance="Danger"
				            Command="{Binding ResetCommand}"
				            IsEnabled="{Binding IsStarted}"
				            Content="Reset" />
                        <ui:Button Grid.Column="2"
				            Margin="10 0 0 0"
				            Appearance="Primary"
				            Command="{Binding NextGenerationCommand}"
				            IsEnabled="{Binding IsRunning, Converter={StaticResource BooleanInvertConverter}}"
				            Content="Next" />
                    </StackPanel>
                </StackPanel>
            </Expander>
        </Grid>
    </Grid>
</Page>
