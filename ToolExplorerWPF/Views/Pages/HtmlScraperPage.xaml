<Page x:Class="ToolExplorerWPF.Views.Pages.HtmlScraperPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:ToolExplorerWPF.ViewModels.Pages"
      xmlns:local="clr-namespace:ToolExplorerWPF.Views.Pages"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      Title="HtmlScraperPage"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:jsonTree="clr-namespace:ToolExplorerWPF.Models"
      d:DataContext="{d:DesignInstance vm:HtmlScraperVM,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      Name="Page"
      mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="{Binding IsDetached, Converter={StaticResource BooleanDataConverter}, ConverterParameter='0,300'}">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ui:Card VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,10"
                      Visibility="{Binding IsDetached, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Url, Mode=TwoWay}"
                             VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="1">
                        <ui:Button Margin="5 0 0 0"
                            Appearance="Secondary"
                            Command="{Binding LoadLocalHtmlCommand, Mode=OneWay}"
                            Content="Load local"
                            Icon="Fluent24" />
                        <ui:Button Margin="5 0 0 0"
                            Appearance="Primary"
                            Command="{Binding LoadPageCommand, Mode=OneWay}"
                            Content="Go to"
                            Icon="Fluent24" />
                    </StackPanel>
                </Grid>
                <ContentPresenter Content="{Binding WebView}"
                    Grid.Row="1"/>
            </Grid>
        </ui:Card>
        <GridSplitter Grid.Column="1" Width="2" Margin="5 0 5 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="{DynamicResource ApplicationBackgroundBrush}"
            Visibility="{Binding IsDetached, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
        <Grid Grid.Column="2"
            Margin="0 0 0 0"
            Visibility="{Binding IsDetached, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ui:Card VerticalContentAlignment="Stretch">
                <StackPanel Orientation="Vertical" CanVerticallyScroll="True" VerticalAlignment="Top">
                    <Grid Margin="0 0 0 10">
                        <ui:TextBlock Text="Url"
                            FontTypography="BodyStrong"
                            VerticalAlignment="Center"/>
                        <ui:Button HorizontalAlignment="Right"
                            Appearance="Secondary"
                            Command="{Binding DetachViewCommand, Mode=OneWay}"
                            Content="Detach"
                            Icon="Fluent24" />
                    </Grid>
                    <TextBox Grid.Column="1" Text="{Binding Url, Mode=TwoWay}"/>
                    <StackPanel Orientation="Horizontal">
                        <ui:Button
                            Grid.Column="0" Margin="0 10 0 0"
                            Appearance="Secondary"
                            Command="{Binding LoadLocalHtmlCommand, Mode=OneWay}"
                            Content="Load local"
                            Icon="Fluent24" />
                        <ui:Button
                            Grid.Column="0" Margin="5 10 0 0"
                            Appearance="Primary"
                            Command="{Binding LoadPageCommand, Mode=OneWay}"
                            Content="Go to"
                            Icon="Fluent24" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <ui:Card Margin="0 10 0 0"
                Grid.Row="1"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ui:TextBlock Text="Xaml config" FontTypography="BodyStrong" Margin="0 0 0 10"/>
                    <ContentControl Content="{Binding RichTextBox}" Grid.Row="1"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <ui:Button
                            Grid.Column="0" Margin="0 10 0 0"
                            Appearance="Secondary"
                            Command="{Binding LoadXMLConfigHtmlCommand, Mode=OneWay}"
                            Content="Load config"
                            Icon="Fluent24" />
                        <ui:Button
                            Grid.Column="0" Margin="5 10 0 0"
                            Appearance="Primary"
                            Command="{Binding ApplyXMLConfigLocalCommand, Mode=OneWay}"
                            Content="Apply local"
                            Icon="Fluent24" />
                    </StackPanel>
                </Grid>
            </ui:Card>

            <ui:Card Margin="0 10 0 0"
                Grid.Row="2"
                VerticalAlignment="Stretch"
                VerticalContentAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock Text="Json result" FontTypography="BodyStrong" Margin="0 0 0 10"/>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <TreeView ItemsSource="{Binding TreeNodes}">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type jsonTree:JsonTreeNode}" ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text=" : " />
                                        <TextBlock Text="{Binding Value}" Foreground="Gray" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
