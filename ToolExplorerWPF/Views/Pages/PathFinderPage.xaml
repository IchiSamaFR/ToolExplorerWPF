<Page x:Class="ToolExplorerWPF.Views.Pages.PathFinderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:ToolExplorerWPF.ViewModels.Pages"
      xmlns:local="clr-namespace:ToolExplorerWPF.Views.Pages"
      Title="PathFinderView"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls"
      xmlns:astarControls="clr-namespace:ToolExplorerWPF.Views.Controls.Astar"
      xmlns:astarlibrary="clr-namespace:AstarLibrary;assembly=AstarLibrary"
      d:DataContext="{d:DesignInstance vm:PathFinderVM,
                                       IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ScrollViewer.CanContentScroll="False"
      Name="Page"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <ui:Card VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Name="content">
            <Grid>
                <astarControls:AstarGrid
                    IsReadOnly="{Binding IsRunning}"
                    Columns="{Binding Columns}"
                    Rows="{Binding Rows}"
                    CheckCells="{Binding CheckCells}"
                    WallCells="{Binding WallCells}"
                    PathCells="{Binding PathCells}"
                    StartCell="{Binding StartCell}"
                    EndCell="{Binding EndCell}"
                    LeftCellDragCommand="{Binding ApplyWallCommand}"
                    LeftCellClickCommand="{Binding ApplyWallCommand}"/>
            </Grid>
        </ui:Card>
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10 0 0 0">
            <Expander x:Name="Grid"
                IsEnabled="{Binding IsRunning, Converter={StaticResource BooleanInvertConverter}}"
                IsExpanded="True">
                <Expander.Header>
                    <ui:TextBlock Text="Grid" FontTypography="BodyStrong"/>
                </Expander.Header>
                <StackPanel Orientation="Vertical">
                    <ui:TextBlock Text="Height"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Minimum="5"
                        Maximum="50"
                        TickFrequency="1"
                        Value="{Binding Rows, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding Rows, Mode=TwoWay}"/>
                    </Grid>
                    <ui:TextBlock Text="Width"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Minimum="5"
                        Maximum="50"
                        TickFrequency="1"
                        Value="{Binding Columns, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding Columns, Mode=TwoWay}"/>
                    </Grid>
                    <CheckBox
                        IsChecked="{Binding IsDiagonal}"
                        Content="Diagonal"/>
                </StackPanel>
            </Expander>
            <Expander x:Name="Generation"
                Margin="0,10,0,0"
                IsExpanded="True">
                <Expander.Header>
                    <ui:TextBlock Text="Generation" FontTypography="BodyStrong"/>
                </Expander.Header>
                <StackPanel Orientation="Vertical" CanVerticallyScroll="True" VerticalAlignment="Top">
                    <ui:TextBlock Text="Speed delay"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Minimum="0"
                        Maximum="200"
                        TickFrequency="1"
                        Value="{Binding SpeedDelay, Mode=TwoWay}"  Margin="0 0 10 0"/>
                        <TextBox Grid.Column="1" Text="{Binding SpeedDelay, Mode=TwoWay}"/>
                    </Grid>

                    <StackPanel Margin="0 10 0 0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                        <ui:Button
                        Appearance="Danger"
                        Command="{Binding ClearCommand}"
                        Content="Clear" />
                        <ui:Button
                        Margin="10,0,0,0"
                        Appearance="Caution"
                        Command="{Binding ResetCommand}"
                        Content="Reset" />
                        <ui:Button
                        Margin="10,0,0,0"
                        Appearance="Primary"
                        Command="{Binding GenerateCommand}"
                        Content="Find path" />
                    </StackPanel>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
