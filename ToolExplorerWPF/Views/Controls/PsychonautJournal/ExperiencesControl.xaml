<UserControl x:Class="ToolExplorerWPF.Views.Controls.PsychonautJournal.ExperiencesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:ToolExplorerWPF.Views.Controls.PsychonautJournal"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:ExperiencesControl,
                 IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <ItemsControl Grid.Row="1"
              ItemsSource="{Binding Experiences, RelativeSource={RelativeSource AncestorType={x:Type local:ExperiencesControl}}}"
              Padding="0,5"
              HorizontalContentAlignment="Stretch"
              ScrollViewer.VerticalScrollBarVisibility="Auto">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <ui:CardControl >
                    <ui:CardControl.Header>
                        <Grid>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Title}"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding CreationDate,
                                    Converter={StaticResource UnixEpochToDateTimeConverter},
                                    StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,4,0,0"
                                    HorizontalAlignment="Left"/>
                                <local:IngestionsControl Ingestions="{Binding IIngestions, Converter={StaticResource ListDistinctNotEmptyConverter}, ConverterParameter=SubstanceName}"
                                    Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardControl.Header>
                </ui:CardControl>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
