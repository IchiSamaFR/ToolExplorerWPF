<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ToolExplorerWPF.Views.Controls"
    xmlns:grids="clr-namespace:ToolExplorerWPF.Views.Controls.Commons"
    xmlns:lifeControls="clr-namespace:ToolExplorerWPF.Views.Controls.GameOfLife"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Style TargetType="Paragraph">
        <Setter Property="LineHeight" Value="1"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="{x:Type controls:BindableRichTextBox}" BasedOn="{StaticResource {x:Type RichTextBox}}" />

    <Style TargetType="{x:Type grids:AGrid}">
        <Setter Property="BackgroundBrush" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="AliveCellBrush" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
    </Style>
    <Style TargetType="{x:Type grids:AMouseGrid}" BasedOn="{StaticResource {x:Type grids:AGrid}}" />
    <Style TargetType="{x:Type lifeControls:LifeGrid}" BasedOn="{StaticResource {x:Type grids:AMouseGrid}}" />
</ResourceDictionary>